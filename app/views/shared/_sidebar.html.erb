<div class="hidden md:flex flex-col w-64 bg-white shadow-2xl rounded-2xl m-2 relative bg-neutral" data-controller="sidebar">
    <div class="mt-10 flex-grow">
        <nav class="flex-1 mt-6">
            <%= link_to feed_path, class: "flex items-center mt-12 px-2 hover:border-l-2 hover:border-zinc-400 border-l-2 border-white" do %>
                <div class="flex hover:bg-gray-100 w-full h-full p-2 rounded-lg">
                    <svg class="h-6 w-6 mr-2"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z"></path>
                    </svg>
                    <span class="text-nuetral-600 font-medium">Feed</span>
                </div>
            <% end %>
        </nav>
    </div>
    <div data-sidebar-target="profileButton" class="absolute bottom-10 left-20 hidden">
        <!-- #-- <button class="w-4 absolute top-9 right-3" data-action="click->hello#closePopUp">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
        </button> -->
        <ul 
            class="rounded-2xl my-6 shadow-lg py-8 w-64 bg-white border border-gray-200 z-10"
        >
            <li class="hover:border-l-2 hover:border-zinc-400 border-l-2 border-white">
                <a class="flex items-center mx-2 hover:bg-gray-100 h-full rounded-lg" href="#">
                    <div class="flex hover:bg-gray-100 w-full h-full p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-6 w-6 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                    <span class="">Account Settings</span>
                    </div>
                </a>
            </li>
            <li class="hover:border-l-2 hover:border-zinc-400 border-l-2 border-white">
                <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "flex items-center mx-2 hover:bg-gray-100 h-full rounded-lg" do %>
                    <div class="flex hover:bg-gray-100 w-full h-full p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-6 w-6 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                        </svg>
                        <span class="">Logout</span>
                    </div>
                <% end %>
            </li>
        </ul>
    </div>
    <button data-action="sidebar#toggle" class="mx-auto w-48 mb-4 px-4 py-2 text-neutral-100 font-medium rounded-full shadow bg-gradient-to-r from-red-400 to-pink-400 hover:from-red-500 hover:to-pink-500">
        <%= current_user.email %>
    </button>
</div>
<div class="md:hidden w-full mt-4">
    <nav class="flex items-center justify-between flex-wrap p-6 rounded-lg shadow-xl border mx-2 bg-white" data-controller="sidebar">
        <div class="flex items-center flex-shrink-0 text-neutral-600 mr-6">
            <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
            <span class="font-semibold text-xl tracking-tight">My Project</span>
        </div>
        <div class="block" data-action="click->sidebar#toggle">
            <button class="flex items-center px-3 py-2 border rounded hover:border-gray-400">
            <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
            </button>
        </div>
        <div class="hidden w-full block flex-grow lg:flex lg:items-center lg:w-auto" data-sidebar-target="profileButton">
            <div class="text-sm md:flex-grow">
                <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    Docs
                </a>
                <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    Examples
                </a>
                <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0">
                    Blog
                </a>
                <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "block mt-4 lg:inline-block lg:mt-0" do %>
                    <span class="">Logout</span>
                <% end %>
            </div>
        </div>
    </nav>
</div>
